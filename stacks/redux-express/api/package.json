{
  "name": "api",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate API",
  "author": "Clevertech <support@clevertech.biz>",
  "main": "src/index.js",
  "scripts": {
    "start": "bnr start",
    "start-dev": "bnr start-dev",
    "knex": "bnr knex",
    "test": "bnr test",
    "test:integration": "bnr test:integration",
    "pretest": "false | cp -i .env.example .env || true"
  },
  "betterScripts": {
    "start": "knex migrate:latest && node src/index.js",
    "start-dev": "node src/wait-for-db.js && knex migrate:latest && nodemon --inspect=0.0.0.0:9229",
    "knex": "knex",
    "test": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "PORT": "0"
      }
    },
    "test:integration": {
      "command": "jest",
      "env": {
        "DB_POOL_MIN": "0",
        "TEST_INTEGRATION": "true"
      }
    }
  },
  "jest": {
    "testEnvironment": "node",
    "setupFiles": ["dotenv/config"],
    "collectCoverage": true,
    "collectCoverageFrom": ["src/**/*.js", "!**/node_modules/**"]
  },
  "dependencies": {
    "@clevertech.biz/auth-core": "0.1.3",
    "body-parser": "^1.18.2",
    "connect-redis": "^3.3.2",
    "cors": "^2.8.4",
    "dotenv": "^4.0.0",
    "express": "^4.13.3",
    "express-session": "^1.15.6",
    "helmet": "^3.9.0",
    "jsonwebtoken": "^8.1.0",
    "knex": "^0.13.0",
    "node-fetch": "^1.7.3",
    "pg": "^7.3.0",
    "raven": "^2.2.1",
    "useragent": "^2.3.0",
    "winston": "*"
  },
  "devDependencies": {
    "better-npm-run": "^0.1.0",
    "cpy-cli": "^1.0.1",
    "jest": "^21.2.1",
    "nodemon": "^1.12.1"
  }
}
